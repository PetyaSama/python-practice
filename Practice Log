import math
text = input("Enter a word: ")
text_list = list(text)
counter = 0
for _ in text_list:
    counter += 1

if counter % 2 == 0:
    flag = False
    for i in text_list:
        counter -= 1
        if i == text_list[counter]:
            flag = True

    if flag == True:
        print("The word is a palindrome")
    else:
        print("The word is not a palindrome")
else:
    counter /= 2
    counter = math.ceil(counter)
    text_list.pop(counter)

    for i_1 in text_list:
        counter -= 1
        if i_1 == text_list[counter]:
            flag = True

    if flag == True:
        print("The word is a palindrome")
    else:
        print("The word is not a palindrome")

