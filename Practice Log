#Practicing the usage of lists

numbers = [3, 7, 5]

while True:
    number = int(input('New number: '))
    if number == 0:
        print("Ending the program")
        break
    numbers.append(number)
    print('Current list of numbers:', numbers)
    for i in numbers:
        print("Numbers multiplied:", i ** 2, i ** 3, i ** 4)

